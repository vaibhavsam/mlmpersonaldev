<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:id="@+id/app_registration"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="5dp"
            android:minHeight="50dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:onClick="back"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:src="@drawable/ic_arrow_back_black_24dp"
                android:layout_width="50dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_weight="1"
                android:layout_gravity="center"
                android:text="Registration"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_gravity="center"
                android:text="L1"
                android:textSize="18sp"
                android:textStyle="bold"
                android:id="@+id/level_tv"
                android:padding="7dp"
                android:layout_marginRight="16dp"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="16dp"
        android:layout_below="@+id/app_registration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:padding="7dp"/>
            <EditText

                android:inputType="textPersonName"
                android:layout_marginTop="4dp"
                android:background="@drawable/edit_back"
                android:id="@+id/name_ET"
                android:padding="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:padding="7dp"/>
            <EditText
                android:inputType="text"
                android:layout_marginTop="4dp"
                android:background="@drawable/edit_back"
                android:id="@+id/user_name_ET"
                android:padding="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mail"
                android:padding="7dp"/>
            <EditText
                android:layout_marginTop="4dp"
                android:background="@drawable/edit_back"
                android:id="@+id/email_ET"
                android:inputType="textEmailAddress"
                android:padding="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mobile"
                android:padding="7dp"/>
            <EditText
                android:layout_marginTop="4dp"
                android:background="@drawable/edit_back"
                android:id="@+id/mobile_ET"
                android:inputType="phone"
                android:padding="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sponsor Id"
                android:padding="7dp"/>
            <EditText
                android:layout_marginTop="4dp"
                android:background="@drawable/edit_back"
                android:id="@+id/sponsor_ET"
                android:padding="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address"
                android:padding="7dp"/>
            <EditText
                android:layout_marginTop="4dp"
                android:background="@drawable/edit_back"
                android:id="@+id/address_ET"
                android:padding="7dp"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pincode"
                android:padding="7dp"/>
            <EditText
                android:layout_marginTop="4dp"
                android:background="@drawable/edit_back"
                android:id="@+id/pincode_ET"
                android:padding="7dp"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Manage Member"
                android:padding="7dp"/>
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_member_in"/>
        </LinearLayout></ScrollView>
    </LinearLayout>

    <Button
        android:onClick="register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register Member"
        android:textColor="#02129f"
        android:background="#fac2c2"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>